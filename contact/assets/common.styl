html,
body,
h1,
h2,
h3,
h4,
h5,
h6
  margin: 0
  padding: 0

// font-family: "PingFang SC", "微软雅黑"

html,
body
  width: 100%
  font-size 12px
  font-family: "PingFang SC", "SourceHanSansCN"

body
  color #0e5490
  background url("./img/bg.png") left top / cover no-repeat

ul,
ol
  list-style: none
  margin: 0
  padding: 0

a
  cursor: pointer
  text-decoration: none

.hidden
  display none

button {
  padding 0
  margin 0
  border none
  outline none
  background transparent
}

.logo-box {
  width 100%
  text-align right
  box-sizing border-box
  padding .38rem .78rem .72rem 0
  & .logo {
    display inline-block
    border 1px solid #fff
    width 2.5rem
    height 1.25rem
    background url("./img/icon.png") top left / 100% 100% no-repeat
  }
}

.contact-title {
  text-align center
  font-size 0.375rem
  color #dc7800
  padding-bottom .7rem
  &.second {
    padding .63rem 0
  }
}

.top-btn-groups, .bottom-btn-groups {
  text-align center
  & a {
    display flex
    align-items center
    margin 0 auto
    width 5rem
    height .7rem
    font-size .25rem
    color #0e5490
    box-sizing border-box
    border 1px solid #0e5490
    border-radius .2rem
  }
  & .btn-icon, & span {
    font-weight 300
  }
  & .btn-icon {
    width .56rem
    height .56rem
    margin-left .28rem
    text-align center
    line-height .56rem
    border-radius 50%
  }
  & span {
    flex 1
    text-align center
  }
}

.top-btn-groups {
  padding-bottom .25rem
  & > a {
    &:nth-child(2) {
      margin .25rem auto .28rem
    }
    &:nth-child(3) span {
      font-size .229rem
    }
  }
  & .phone {
    background url("./img/phone-b.png") center center / .39rem .42rem no-repeat
  }
  & .global {
    background url("./img/global.png") center center / .45rem .45rem no-repeat
  }
}

.bottom-btn-groups {
  padding-bottom .36rem
  & > a {
    &:nth-child(2) {
      margin .32rem auto
    }
  }
  & .btn-icon {
    margin-left .13rem
  }
  & .phone {
    background url("./img/phone.png") center center / .39rem .42rem no-repeat #0e5490
  }
  & .lin {
    background url("./img/lin.png") center center / .43rem .43rem no-repeat #0e5490
  }
  & .email {
    background url("./img/email.png") center center / .39rem .28rem no-repeat #0e5490
  }
}

.address-info {
  font-size .25rem
  line-height .458rem
  font-weight 500
  text-align center
  & > div {
    display inline-block
    text-align left
  }
}

.code {
  text-align center
  margin .78rem 0 .19rem
  & img {
    height 2.22rem
  }
}

.code-des {
  text-align center
  font-size .25rem
  line-height .375rem
  font-weight 300
}

.time-des {
  padding-bottom 1.03rem
  text-align center
  font-size .25rem
  font-weight 300
  line-height .375rem
}