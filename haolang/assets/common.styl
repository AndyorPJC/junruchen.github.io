html,
body,
h1,
h2,
h3,
h4,
h5,
h6
  margin: 0
  padding: 0

html,
body
  width 100%
  height 100%
  font-size 12px
  font-family: "PingFang SC", "SourceHanSansCN"

body
  position relative
  background-color rgba(66, 180, 230, .1)

ul,
ol
  list-style: none
  margin: 0
  padding: 0

a
  cursor: pointer
  text-decoration: none

.hidden
  display none

button {
  padding 0
  margin 0
  border none
  outline none
  background transparent
}

// top-box
.top-box {
  width 100%
  height 3.44rem
  background url("./img/logo.png") .41rem .45rem / 2.36rem auto no-repeat, url("./img/topBgMoon.png") left top / 100% auto no-repeat
}

// bottom-box
.bottom-box {
  position absolute
  left 0
  bottom 0
  width 100%
  height 2.43rem
  background url("./img/bottomBg.png") left top / 100% auto no-repeat
}

// step-1
.loading-box {
  padding-top 1.1rem
  .loading-text {
    width 100%
    height 1.46rem
    background url("./img/loadingText.png") center top / 6.16rem auto no-repeat
  }
  .loading {
    width 100%
    height .42rem
    padding-top 2.6rem
    background url("./img/loading.png") center top 2.6rem / 3.36rem auto no-repeat
  }
}

// step-2
.line-box {
  padding-top 1.12rem
  opacity 0
  .line-text {
    width 100%
    height 1.16rem
    background url("./img/lineText.png") center top / 4.5rem auto no-repeat
  }
  .line {
    position relative
    margin .8rem auto 0
    width 4rem
    height 4rem
    border 2px dashed red
    box-sizing border-box
  }
}

.line-item {
  position absolute
  background #4a4a4a
  &:nth-child(2n) {
    width 4rem
    height 2px
    left -2px
  }
  &:nth-child(2) {
    top -2px
  }
  &:nth-child(4) {
    bottom -2px
  }
  &:nth-child(2n + 1) {
    width 2px
    height 4rem
    top -2px
  }
  &:nth-child(1) {
    left -2px
  }
  &:nth-child(3) {
    right -2px
  }
}

.fadeOut {
  opacity 0
  transition opacity .3s linear
}

.fadeIn {
  opacity 1
  transition opacity .3s linear
}


#test {
  position absolute
  left 0
  top 0
  width 1rem
  height .5rem
}